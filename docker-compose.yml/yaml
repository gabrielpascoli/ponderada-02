version: '3'
services:
  frontend:
    build:
      context: ./frontend
    ports:
      - "80:80"
  backend:
    build:
      context: ./backend
    ports:
      - "5000:5000"
  database:
    image: mysql:latest
    environment:
      MYSQL_ROOT_PASSWORD: root_password
      MYSQL_DATABASE: my_database
